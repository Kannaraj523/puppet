CLASSES
++



node 'client.example.com'{
      class{'linux':}
      }
node 'client2.example.com'{
      class{'linux':}
      }
class linux{     
    file{'/info.txt':
    ensure => 'present',
    content => "created by puppet",
      }
    package{'httpd':
    ensure => 'present',
         }
    service{'httpd':
    ensure => 'running',
    enable => true,
          }
}


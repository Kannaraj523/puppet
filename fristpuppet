cat site.pp 
+++
node 'client.example.com'{
     
    file{'/info.txt':
    ensure => 'present',
    content => "created by puppet",
      }
}
++
puppet parser validate site.pp #to check errors


node 'client.example.com'{
     
    file{'/info.txt':
    ensure => 'present',
    content => "created by puppet",
      }
    package{'httpd':
    ensure => 'present',
         }
}

+++++
#cat site.pp 
node 'client.example.com'{
     
    file{'/info.txt':
    ensure => 'present',
    content => "created by puppet",
      }
    package{'httpd':
    ensure => 'present',
         }
    service{'httpd':
    ensure => 'running',
    enable => true,
          }
}




node 'client2.example.com'{
     
    file{'/info.txt':
    ensure => 'present',
    content => "created by puppet",
      }
    package{'httpd':
    ensure => 'present',
         }
    service{'httpd':
    ensure => 'running',
    enable => true,
          }
}


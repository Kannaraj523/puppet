[root@master manifests]# cat site.pp 

node 'client.example.com'{
      class{'linux':}
      }
node 'client2.example.com'{
      class{'linux':}
      }
class linux{ 
    $admintools=['git','vim','wget']
    package{$admintools:
    ensure => true,
          }    
    file{'/info.txt':
    ensure => 'present',
    content => "created by puppet",
      }
    package{'httpd':
    ensure => 'present',
         }
    service{'httpd':
    ensure => 'running',
    enable => true,
          }
}
